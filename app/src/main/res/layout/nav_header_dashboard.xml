<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/navImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/person_logo" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/navImageView"
        android:id="@+id/tvNavUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#22c79f"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="User Name" />

    <TextView
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#22c79f"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/tvNavUserName"
        android:id="@+id/tvNavUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@user.com" />

</RelativeLayout>
