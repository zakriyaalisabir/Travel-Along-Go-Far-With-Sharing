<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/background"
    tools:context=".FirstTimeLoginForMobileNumberVerification">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spCC"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:entries="@array/countryCodes"></Spinner>

        <EditText
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/etMN"
            android:textColor="#000000"
            android:textSize="25sp"
            android:inputType="number"
            android:maxLength="10"
            android:textStyle="bold"
            android:hint="Mobile Number"
            android:layout_toRightOf="@+id/spCC"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/btnProceed"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="PROCEED"
            android:layout_below="@+id/etMN"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_button"
            />


        <EditText
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/btnProceed"
            android:id="@+id/etPN"
            android:textColor="#000000"
            android:textSize="25sp"
            android:inputType="number"
            android:maxLength="4"
            android:textStyle="bold"
            android:hint="Enter 4 digit PIN"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/btnConfirm"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="CONFIRM"
            android:layout_below="@+id/etPN"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_button"
            />

    </RelativeLayout>

</RelativeLayout>