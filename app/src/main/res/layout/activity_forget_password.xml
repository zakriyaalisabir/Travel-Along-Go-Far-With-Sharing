<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/background"
    tools:context=".ForgetPassword">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNote"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#267c5f"
            android:text="Enter Email and Press The Confirm Button To Get New Password "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/tvNote"
            android:layout_marginTop="15dp"
            android:id="@+id/tiLayout1"
            android:hint="Email"
            android:textColorHint="#267c5f"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:textStyle="bold"
                android:textColor="#267c5f"
                android:textSize="20sp"
                android:textColorHint="#267c5f"
                android:hint="Email"
                android:id="@+id/etEmailFG"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnRequestNewPassword"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:text="CONFIRM"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/tiLayout1"
            android:background="@drawable/round_button"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </RelativeLayout>

</RelativeLayout>